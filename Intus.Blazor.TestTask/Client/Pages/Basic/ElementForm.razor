@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<EditForm Model="@element" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Element Name :</label>
        <div>
            <InputText @bind-Value="@element.ElementName" />
            <ValidationMessage For="@(() => element.ElementName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Element Type :</label>
        <div>
            <InputSelect @bind-Value="@element.Type">
                <option>Please select type</option>
                <option>Doors</option>
                <option>Window</option>
            </InputSelect>
            <InputText @bind-Value="@element.Type" />
            <ValidationMessage For="@(() => element.Type)" />
        </div>
    </div>
    <div class="form-group">
        <label>Element Width :</label>
        <div>
            <InputNumber @bind-Value="@element.Width" />
            <ValidationMessage For="@(() => element.Width)" />
        </div>
    </div>
    <div class="form-group">
        <label>Element Height :</label>
        <div>
            <InputNumber @bind-Value="@element.Height" />
            <ValidationMessage For="@(() => element.ElementName)" />
        </div>
    </div>

    <table>
        <tr>
            <td>
                <button type="submit" class="btn btn-success">
                    @ButtonText
                </button>
            </td>
            <td>
                <a class="btn btn-info" href="basic">Cancel</a>
            </td>
        </tr>
    </table>
</EditForm>
@code
{ 
    [Parameter] public Elements element { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}